{% extends 'base.html.twig' %}

{% block body %}
    <h3>Liste des personnes</h3>
    <a href="{{ path('person_create') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter
    </a>

    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Nom</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.email }}</td>
                <td>{{ personne.nom }}</td>
                <td>
                    <a href="{{ path('person_update', {email: personne.email}) }}" class="btn btn-warning btn-sm">
                        <i class="fas fa-user-edit"></i> Modifier
                    </a>
                    <a href="{{ path('person_deposer_absence', {email: personne.email}) }}" class="btn btn-primary btn-sm">
                        <i class="far fa-plus"></i> Deposer une absence
                    </a>
                    <a href="{{ path('person_deposer_absence', {email: personne.email}) }}" class="btn btn-default btn-sm">
                        <i class="far fa-calendar-check"></i> Calendrier
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
